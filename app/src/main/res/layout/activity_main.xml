<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chart"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="X value"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_margin="18dp"
        android:padding="15dp"
        android:background="@drawable/edittext_style"
        android:id="@+id/xvalue_edt"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Y value"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginTop="80dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:padding="15dp"
        android:background="@drawable/edittext_style"
        android:id="@+id/yvalue_edt"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        style="@style/Widget.AppCompat.TextView"
        android:textSize="20sp"
        android:background="@drawable/button_style"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:layout_marginStart="250dp"
        android:layout_marginEnd="200dp"
        android:padding="15dp"
        android:id="@+id/add_btn"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:id="@+id/listview"
        android:background="@drawable/listview_style"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="590dp"
        android:layout_marginLeft="300dp"
        android:src="@drawable/ic_baseline_menu_open_24"
        app:fabSize="normal"
        android:backgroundTint="@color/red_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/piechart_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="520dp"
        android:layout_marginLeft="300dp"
        android:layout_marginBottom="24dp"
        app:fabSize="normal"
        android:backgroundTint="@color/red_dark"
        app:layout_constraintBottom_toTopOf="@+id/add_fab"
        app:layout_constraintEnd_toEndOf="@+id/add_fab"
        app:layout_constraintStart_toStartOf="@+id/add_fab"
        app:srcCompat="@drawable/ic_baseline_pie_chart_24" />
    <TextView
        android:id="@+id/piechart_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_marginTop="530dp"
        android:layout_marginLeft="300dp"
        android:text="Pie Chart"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/piechart_btn"
        app:layout_constraintEnd_toStartOf="@+id/piechart_btn"
        app:layout_constraintTop_toTopOf="@+id/piechart_btn" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/barchart_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="300dp"
        app:fabSize="normal"
        android:backgroundTint="@color/red_dark"
        app:layout_constraintBottom_toTopOf="@+id/piechart_btn"
        app:layout_constraintEnd_toEndOf="@+id/piechart_btn"
        app:layout_constraintStart_toStartOf="@+id/piechart_btn"
        app:srcCompat="@drawable/ic_baseline_bar_chart_24" />
    <TextView
        android:id="@+id/barchart_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_marginStart="200dp"
        android:layout_marginTop="460dp"
        android:layout_marginLeft="300dp"
        android:text="Bar Chart"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/barchart_btn"
        app:layout_constraintEnd_toStartOf="@+id/barchart_btn"
        app:layout_constraintTop_toTopOf="@+id/barchart_btn" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/linechart_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="380dp"
        android:layout_marginLeft="300dp"
        app:fabSize="normal"
        android:backgroundTint="@color/red_dark"
        app:layout_constraintBottom_toTopOf="@+id/barchart_btn"
        app:layout_constraintEnd_toEndOf="@+id/barchart_btn"
        app:layout_constraintStart_toStartOf="@+id/barchart_btn"
        app:srcCompat="@drawable/ic_baseline_show_chart_24" />
    <TextView
        android:id="@+id/linechart_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_marginTop="390dp"
        android:layout_marginLeft="300dp"
        android:text="Line Chart"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/linechart_btn"
        app:layout_constraintEnd_toStartOf="@+id/linechart_btn"
        app:layout_constraintTop_toTopOf="@+id/linechart_btn" />

</RelativeLayout>